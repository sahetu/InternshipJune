<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginVertical="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_3sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/product_detail_image"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_detail_name"
                style="@style/text_20" />

            <TextView
                android:id="@+id/product_detail_price"
                style="@style/text_14"
                android:layout_marginTop="@dimen/_3sdp" />

            <TextView
                android:id="@+id/product_detail_desc"
                style="@style/text_14"
                android:layout_marginTop="@dimen/_3sdp"
                android:justificationMode="inter_word" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/product_detail_wishlist"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/wishlist_blank" />

                <ImageView
                    android:id="@+id/product_detail_cart"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/add_cart" />

                <LinearLayout
                    android:id="@+id/product_detail_cart_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:gravity="center"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/product_detail_minus"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/minus_icon" />

                    <TextView
                        android:id="@+id/product_detail_qty"
                        style="@style/text_20"
                        android:layout_marginHorizontal="@dimen/_10sdp" />

                    <ImageView
                        android:id="@+id/product_detail_plus"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/plus_icon" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/product_detail_pay"
                style="@style/button_16"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Pay Now" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>